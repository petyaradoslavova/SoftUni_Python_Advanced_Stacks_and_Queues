def flights(*args):
    dictionary_of_flights = {}
    list_of_destinations = []
    list_of_passangers = []

    for arg in args:
        if arg == 'Finish':
            break
        if type(arg) == str:
            list_of_destinations.append(arg)
        elif type(arg) == int:
            list_of_passangers.append(arg)

    for destination,passengers in zip(list_of_destinations,list_of_passangers):
        if destination in dictionary_of_flights:
            dictionary_of_flights[destination] += passengers
        else:
            dictionary_of_flights[destination] = passengers

    return dictionary_of_flights



print(flights('Vienna', 256, 'Vienna', 26, 'Morocco', 98, 'Paris', 115, 'Finish', 'Paris', 15))
print(flights('London', 0, 'New York', 9, 'Aberdeen', 215, 'Sydney', 2, 'New York', 300, 'Nice', 0, 'Finish'))
print(flights('Finish', 'New York', 90, 'Aberdeen', 300, 'Sydney', 0))
